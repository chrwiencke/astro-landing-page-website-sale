---
interface Props {
	tool: string;
	description: string;
    color: string;
}

const { tool, description, color } = Astro.props;
---

<div class={color}>
    <div class="p-20">
        <h1 class="text-3xl font-bold text-center">{tool}</h1>
        <h2 class="text-xl font-bold text-center">{description}</h2>
    
    </div>
</div>